{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "includeCoAuthoredBy": false,
  "model": "claude-sonnet-4-20250514",
  "permissions": {
    "allow": ["Bash(pnpm:*)", "mcp__sequentialthinking__sequentialthinking"],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "git diff --name-only HEAD | xargs -r pnpm prettier --write"
          }
        ]
      },
      {
        "matcher": "MultiEdit", 
        "hooks": [
          {
            "type": "command",
            "command": "git diff --name-only HEAD | xargs -r pnpm prettier --write"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "git diff --name-only HEAD | xargs -r pnpm prettier --write"
          }
        ]
      }
    ]
  }
}
